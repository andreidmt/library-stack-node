{
  "name": "library-stack-node",
  "version": "0.0.1",
  "description": "Starter library stack for Node.js",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": "false",
  "files": [
    "/dist"
  ],
  "homepage": "https://github.com/andreidmt/tpl-node",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreidmt/tpl-node.git"
  },
  "bugs": {
    "url": "https://github.com/andreidmt/tpl-node/issues"
  },
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt"
  },
  "keywords": [
    "nodejs",
    "esm",
    "tape",
    "eslint",
    "prettier",
    "lintstaged",
    "commitlint",
    "markdownlint",
    "circleci",
    "semantic-release",
    "coveralls"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "----UTIL": "",
    "prepare": "git config --local core.hooksPath .githook",
    "setup": "npm ci --also=dev",
    "prefresh": "rm -rf ./node_modules && rm --force ./package-lock.json",
    "setup.fresh": "npm install",
    "postfresh": "npm audit --fix",
    "update": "npm-check --update",
    "----BUILD": "",
    "build": "tsc --build --incremental",
    "prebuild.fresh": "rm -rf ./dist",
    "build.fresh": "tsc",
    "----LINT": "",
    "lint.js": "eslint --quiet src",
    "lint.js-staged": "eslint --quiet",
    "lint.md": "markdownlint '*.md'",
    "lint.md-staged": "markdownlint",
    "lint": "npm run lint.js && npm run lint.md",
    "----TEST": "",
    "pretest": "npm run build",
    "test": "node dist/**/*.test.js | tap-nirvana",
    "tdd": "nodemon --watch src --ext js,ts,json --exec 'npm test'",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "typecheck": "tsc --noEmit",
    "----BENCHMARK": "",
    "prebenchmark": "npm run build && rm -rf ./benchmark",
    "benchmark": "node dist/**/*.bench.js",
    "----PUBLISH": "",
    "publish": "semantic-release"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@asd14/eslint-config": "^6.2.1",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/tape": "^4.13.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "benny": "^3.7.0",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-no-inferred-method-name": "^2.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "lint-staged": "^11.2.3",
    "markdownlint-cli": "^0.29.0",
    "nodemon": "^2.0.13",
    "npm-check": "^5.9.2",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "semantic-release": "^18.0.0",
    "tap-nirvana": "^1.1.0",
    "tape": "^5.3.1"
  }
}
