{
  "root": true,
  "extends": ["@asd14/eslint-config/targets/node-ts"],

  "rules": {
    "import/extensions": ["error", "never"]
  },

  "settings": {
    // Recommended if you use eslint_d
    "import/cache": {
      "lifetime": 5
    },

    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  }
}
